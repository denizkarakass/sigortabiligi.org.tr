<div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Poliçe Ekleme</h3>
    </div> 
    <!-- /.card-header --> 
    <!-- form start -->
    <form action="/police-add" method="POST" >
      <div class="card-body row">
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Şase numarasını giriniz:</span>
            </div>
            <input name="saseNo" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Araba modelini giriniz:</span>
            </div>
            <input name="model" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Kaza miktarını giriniz:</span>
            </div>
            <input name="quantity" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Kaza tarihini giriniz (gg.aa.yyyy):</span>
            </div>
            <input name="date" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
          </div>
       
      </div>
      <!-- /.card-body -->

      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Poliçeyi Ekle</button>
      </div>
    </form>
  </div>
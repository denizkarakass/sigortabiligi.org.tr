<div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Sözleşme Bilgileri Düzenleme</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="/sozlesme-update/<%= sozlesme._id %>?_method=PUT" method="POST" >
      <div class="card-body row">
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Üyelik Sözleşmesi:</span>
            </div>
            <input value="<%= sozlesme.uyelik%>" name="uyelik" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Aydınlatma Metni:</span>
            </div>
            <input value="<%= sozlesme.aydinlatma%>" name="aydinlatma" type="text" class="form-control" >
          </div>
      </div>
      <!-- /.card-body -->

      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Sözleşme Bilgilerini Güncelle</button>
      </div>
    </form>
  </div>
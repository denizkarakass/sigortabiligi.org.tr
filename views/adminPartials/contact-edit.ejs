<div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">İletişim Bilgileri Düzenleme</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="/contact-update/<%= contact._id %>?_method=PUT" method="POST" >
      <div class="card-body row">
          <div class="input-group mb-3 col-lg-5 "> 
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Telefon numarası:</span>
            </div>
            <input value="<%= contact.phone %>" name="phone" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 "> 
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Telefon numarası 2:</span>
            </div>
            <input value="<%= contact.phone2 %>" name="phone2" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 "> 
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Whatsapp numarası :</span>
            </div>
            <input value="<%= contact.whatsapp %>" name="whatsapp" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 "> 
            <div class="input-group-prepend">
              <span >! Whatsapp numarasını girerken rakamlar arasında boşluk bırakmayınız ve en başa 0 yazınız.</span>
            </div>
          </div>
          <div class="input-group mb-3 col-lg-5 "> 
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Mail Adresi :</span>
            </div>
            <input value="<%= contact.email %>" name="email" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-12 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Yardım Bölümü Metni:</span>
            </div>
            <textarea class="form-control" id="w3review" name="help_text" rows="4" cols="100%">
              <%= contact.help_text %>
              </textarea>
          </div>
      </div>
      <!-- /.card-body -->

      <div class="card-footer">
        <button type="submit" class="btn btn-primary">İletişim Bilgilerini Güncelle</button>
      </div>
    </form>
  </div>
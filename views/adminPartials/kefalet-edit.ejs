<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Kefalet Sigortası Düzenleme</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start -->
  <form action="/kefalet-update/<%= kefalet._id %>?_method=PUT" method="POST">
    <div class="card-body row">
      <div class="input-group mb-3 col-lg-5 ">
        <span class="input-group-text" id="inputGroup-sizing-default">Poliçe durmunu seçiniz:</span>
        <select name="status" class="form-select col-lg-6" aria-label=".form-select-lg example">
          <option value="<%= kefalet.status %>"><%= kefalet.status %></option>
          <option value="aktif">Aktif yap</option>
          <option value="pasif">Pasif yap</option>
        </select>
      </div>
    </div>
    <div class="card-body row">
      <div class="input-group mb-3 col-lg-5 ">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">Poliçe numarasını giriniz:</span>
        </div>
        <input value="<%= kefalet.policeNo %>" name="policeNo" type="text" class="form-control" aria-label="Default"
          aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3 col-lg-5 ">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">Poliçe Veriliş Tarihini giriniz:</span>
        </div>
        <input value="<%= kefalet.verilis_date %>" name="verilis_date" type="text" class="form-control"
          aria-label="Default" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3 col-lg-5 ">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">Veren Sigortayı giriniz:</span>
        </div>
        <input value="<%= kefalet.veren_sigorta %>" name="veren_sigorta" type="text" class="form-control"
          aria-label="Default" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3 col-lg-5 ">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">Firma Unvanını giriniz:</span>
        </div>
        <input value="<%= kefalet.firma_unvan %>" name="firma_unvan" type="text" class="form-control"
          aria-label="Default" aria-describedby="inputGroup-sizing-default">
      </div>
      <div class="input-group mb-3 col-lg-5 ">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">Poliçe Belgesi Linki:</span>
        </div>
        <input value="<%= kefalet.belge_pdf %>" name="belge_pdf" type="text" class="form-control" aria-label="Default"
          aria-describedby="inputGroup-sizing-default">
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Kefalet Sigortasını Güncelle</button>
    </div>
  </form>
</div>
<div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Poliçe Düzenleme</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="/police-update/<%= police._id %>?_method=PUT" method="POST" >
      <div class="card-body row">
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Şase numarası:</span>
            </div>
            <input value="<%= police.saseNo %>" name="saseNo" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Araba modeli:</span>
            </div>
            <input value="<%= police.model %>" name="model" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Kaza miktarı:</span>
            </div>
            <input value="<%= police.quantity %>" name="quantity" type="text" class="form-control" >
          </div>
          <div class="input-group mb-3 col-lg-5 ">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Kaza tarihi (gg.aa.yy):</span>
            </div>
            <input value="<%= police.date %>" name="date" type="text" class="form-control">
          </div>
       
      </div>
      <!-- /.card-body -->

      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Poliçeyi Güncelle</button>
      </div>
    </form>
  </div>